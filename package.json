{
  "name": "code-intel-digest",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "NODE_OPTIONS=--max-old-space-size=1024 next start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "test": "vitest run",
    "db:backup": "bash scripts/backup-db.sh",
    "db:restore": "bash scripts/restore-db.sh",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:sync:from-prod": "npx tsx scripts/sync-production-to-local-postgres.ts",
    "db:sync:to-prod": "npx tsx scripts/sync-local-to-production-postgres.ts",
    "sync:daily": "npx tsx scripts/run-daily-sync.ts",
    "clear-audio-cache": "sqlite3 .data/digest.db 'DELETE FROM generated_podcast_audio;' && rm -rf .data/audio/* && echo 'Audio cache cleared'"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/react-datepicker": "^6.2.0",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "html2pdf.js": "^0.12.1",
    "lucide-react": "^0.561.0",
    "next": "^16.1.1",
    "openai": "^6.10.0",
    "pg": "^8.16.3",
    "react": "^19.2.3",
    "react-datepicker": "^9.1.0",
    "react-dom": "^19.2.3",
    "tsx": "^4.19.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^4.0.15",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "^16.1.1",
    "playwright": "^1.57.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.15"
  }
}
